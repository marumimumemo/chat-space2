.main-contents__messages__box{ 'data-id': message.id }
    %h4.name
        = message.user.name
    %p.date
        = message.created_at
    %h5.message
        %p.message__content
            = message.content if message.content.present?
        .message__image
            = image_tag message.image.url if message.image.present?
